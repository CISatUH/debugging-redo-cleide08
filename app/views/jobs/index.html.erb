<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
  <th>Completed Jobs</th>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
     <% if job.Complete.present? %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.location%></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>


<table>
  <thead>
  <th>Uncompleted Jobs</th>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @jobs.each do |job| %>
    <% if job.Complete.blank? %>
    <tr>
      <td><%= job.name %></td>
      <td><%= job.location%></td>
      <td><%= link_to 'Show', job %></td>
      <td><%= link_to 'Edit', edit_job_path(job) %></td>
      <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  <% end %>
  </tbody>
</table>
<br>

